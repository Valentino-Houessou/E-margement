# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                    controllers.Application.index()

# utilisateur
GET    /utilisateur          controllers.utilisateur.UtilisateurController.getUtilisateur()
GET    /utilisateur-byMail   controllers.utilisateur.UtilisateurController.getUtilisateurByMail()
POST   /utilisateur-update   controllers.utilisateur.UtilisateurController.updateUtilisateur()
PUT    /utilisateur-add      controllers.utilisateur.UtilisateurController.addUtilisateur()
DELETE /utilisateur-delete   controllers.utilisateur.UtilisateurController.deleteUtilisateur()

# Enseignant
GET     /enseignant/                        controllers.enseignant.EnseignantController.index()
GET     /enseignant/profil                  controllers.enseignant.EnseignantController.getEnseignant()
GET     /enseignant/listEnseignant          controllers.enseignant.EnseignantController.getListEnseignant()
#PUT     /enseignant/ajout                   controllers.enseignant.EnseignantController.ajoutProf()
#PUT     /enseignant/modification            controllers.enseignant.EnseignantController.modifProf()
#PUT     /enseignant/supprimer               controllers.enseignant.EnseignantController.supProf()
#PUT     /enseignant/listePresence           controllers.enseignant.EnseignantController.listPresent()

# etudiant


# admin
GET    /administrateur/index                 controllers.administrateur.administrateurController.adminIndex()
PUT    /administrateur/utilisateurs/setAdmin controllers.administrateur.administrateurController.setAdmin()
POST   /administrateur/update-admin          controllers.administrateur.administrateurController.updateAdmin()
DELETE /administrateur/delete-admin          controllers.administrateur.administrateurController.deleteAdmin()





# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
